<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<ListPreference 
		android:key="CALLS_FREQUENCY_PREF"
		android:id="@+id/callsFrequencyPreferenceId" 
		android:title="Calls"
		android:entries="@array/callsFrequencyItems"
		android:entryValues="@array/callsFrequencyValues" 
		android:defaultValue="2" />
	<ListPreference 
	android:key="SMS_FREQUENCY_PREF"
		android:title="SMS" 
		android:id="@+id/smsFrequencyPreferenceId"
		android:entries="@array/smsFrequencyItems"
		android:entryValues="@array/smsFrequencyValues" 
		android:defaultValue="2" />
	<ListPreference 
		android:id="@+id/locationFrequencyPreferenceId"
		android:key="LOC_FREQUENCY_PREF" 
		android:title="Location"
		android:entries="@array/locationFrequencyItems"
		android:entryValues="@array/locationFrequencyValues" 
		android:defaultValue="2" />
</PreferenceScreen>